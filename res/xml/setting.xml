<?xml version="1.0" encoding="utf-8"?>
    <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory android:title="@string/basic" android:key="cat_basic">
            <ListPreference android:key="position" android:entryValues="@array/position_values" android:positiveButtonText="@string/ok" android:entries="@array/position" android:negativeButtonText="@string/cancel" android:dialogTitle="@string/position" android:title="@string/position" android:defaultValue="true" />
            <ListPreference android:key="size" android:entryValues="@array/size_values" android:entries="@array/size" android:dialogTitle="@string/size" android:positiveButtonText="@string/ok" android:negativeButtonText="@string/cancel" android:defaultValue="1.0" android:title="@string/size"/>
            <SwitchPreference android:key="filter" android:title="@string/filter" android:summaryOff="@string/filter_summary_off" android:summaryOn="@string/filter_summary_on" android:defaultValue="false"/>
            <SwitchPreference android:key="display" android:defaultValue="false" android:title="@string/display" android:summaryOn="@string/display_summary_on" android:summaryOff="@string/display_summary_off"/>
            <ListPreference android:key="size_expended" android:entryValues="@array/size_values" android:entries="@array/size" android:dialogTitle="@string/size" android:positiveButtonText="@string/ok" android:negativeButtonText="@string/cancel" android:defaultValue="1.0" android:title="@string/size_expended" android:dependency="display"/>
            <SwitchPreference android:key="customize" android:title="@string/customize" android:summaryOff="@string/customize_summary_off" android:summaryOn="@string/customize_summary_on" android:defaultValue="false"/>
            <Preference android:key="setting_customize" android:title="@string/customize_setting" android:dependency="customize">
                <intent android:action="android.intent.action.VIEW" android:targetPackage="de.xiaoxia.xmoretimetext" android:targetClass="de.xiaoxia.xmoretimetext.SettingCustomize" />
            </Preference>
        </PreferenceCategory>
        <PreferenceCategory android:title="@string/date" android:key="cat_date">
            <SwitchPreference android:key="display_date" android:defaultValue="false" android:title="@string/display_date" android:summaryOn="@string/display_date_summary_on" android:summaryOff="@string/display_date_summary_off"/>
            <EditTextPreference android:singleLine="true" android:key="format_date" android:negativeButtonText="@string/cancel" android:positiveButtonText="@string/ok" android:title="@string/format_date" android:dialogTitle="@string/format_date" android:dialogMessage="@string/format_msg" android:dependency="display_date"/>
            <ListPreference android:key="position_date" android:entryValues="@array/position_values" android:positiveButtonText="@string/ok" android:entries="@array/position" android:negativeButtonText="@string/cancel" android:dialogTitle="@string/position_date" android:title="@string/position_date" android:defaultValue="true" android:dependency="display_date"/>
            <ListPreference android:key="priority_date" android:entryValues="@array/priority_values" android:positiveButtonText="@string/ok" android:entries="@array/priority" android:negativeButtonText="@string/cancel" android:dialogTitle="@string/priority_date" android:title="@string/priority_date" android:defaultValue="true" android:dependency="display_date"/>
            <ListPreference android:key="size_date" android:entryValues="@array/size_values" android:entries="@array/size" android:dialogTitle="@string/size_date" android:positiveButtonText="@string/ok" android:negativeButtonText="@string/cancel" android:defaultValue="1.0" android:title="@string/size_date" android:dependency="display_date"/>
        </PreferenceCategory>
    </PreferenceScreen>
